{
  "name": "futureplate",
  "version": "0.0.1",
  "description": "Boilerplate project for future-facing tech: universal react + flux + react-router + css modules",
  "engine": "node 4.2.1",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf build/*",
    "dev-build": "npm run clean && NODE_ENV=DEVELOPMENT webpack -w",
    "dev": "NODE_ENV=DEVELOPMENT node_modules/nodemon/bin/nodemon.js src/index.js",
    "hot-client": "NODE_ENV=DEVELOPMENT BABEL_ENV=HOT_MODULE_REPLACEMENT node webpack-dev-server.js",
    "hot-build": "SERVER_ONLY=TRUE npm run dev-build",
    "hot": "HOT_MODULE_REPLACEMENT=TRUE npm run dev",
    "build": "npm run clean && webpack",
    "start": "npm run build && node src/index.js"
  },
  "author": "Danny Bowman",
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "css-loader": "^0.23.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "nodemon": "^1.8.1",
    "null-loader": "^0.1.1",
    "react-addons-update": "^0.14.3",
    "style-loader": "^0.13.0",
    "superagent": "^1.5.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-register": "^6.4.3",
    "express": "^4.13.3",
    "jade": "^1.11.0",
    "lodash": "^3.10.1",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-router": "^2.0.0-rc4"
  }
}
